<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/offresEmploi.css"> <!-- Correct CSS inclusion -->
</head>
<body>
    <%- include('barrenavigation') %> <!-- Inclure la barre de navigation -->
    <h1 class="heading"><%= title %></h1>

    <div class="main-content">
        <div class="left-column">
            <input type="search" name="searchbar" id="searchbar" class="searchbar" placeholder="Rechercher une candidature...">
            <div id="candidatureList">
                <% candidatures.forEach((candidature) => { %>
                    <div class="offer-card">
                        <div class="card-content">
                            <div class="container-row">
                                <div>
                                    <%= candidature.offreEmploi %>
                                </div>
                                <div>
                                    <%= candidature.candidat %>
                                </div>
                                <div>
                                    <%= candidature.date %>
                                </div>
                                <div>
                                    <%= candidature.etat %>
                                </div>
                            </div>
                            <div class="container-row">
                                <% candidature.piecesChemAcces.forEach((file, index) => { %>
                                    <div class="buttons">
                                        <button class="btn-secondary">
                                            <a href="/files/download/<%= file.fileName %>">
                                                Télécharger Pièce <%= index + 1 %>
                                            </a>
                                        </button>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="right-column">
                            <div class="buttons">
                                <button class="btn-danger"
                                        data-offre-emploi="<%= candidature.offreEmploi %>"
                                        data-candidat="<%= candidature.candidat %>">
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>

