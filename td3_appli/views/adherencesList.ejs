            <thead>
                <tr>
                    <th>Organisation ID</th>
                    <th>Recruteur ID</th>
                    <th>Etat</th>
                </tr>
            </thead>
            <tbody id="adherencesTableBody">
                <% adherences.forEach((adherence) => { %>
                    <tr class="hover">
                      <td><%= adherence.organisation %></td>
                      <td><%= adherence.recruteur %></td>
                      <td><%= adherence.etat %></td>
                    </tr>
                  <% }) %>
            </tbody>
        </table>
    </div>
    <div id="pagination" class="pagination-container"></div>
    <script src="/javascripts/utilitaires.js"></script>
</body>
