<body>
    <%- include('barrenavigation') %> <!-- Inclure la barre de navigation -->

    <h1><%= title %></h1>



    <div> SEARCHBAR INCOMING </div>
    <div class="main-content">
        <div class="left-column">
            <% allOffers.forEach((offre) => { %>
            <div class="offer-card">
                <div class="card-content">
                    <div class="cardTitle">
                        <%= offre.intitule %>
                    </div>
                    <div class="container-row">
                        <div>
                            <%= offre.organisation_nom %>
                        </div>
                        <div>
                            <%= offre.lieuMission %>
                        </div>
                        <div>
                            Disponible jusqu'au <%= offre.dateValidite %>
                        </div>
                    </div>

                    <div class="container-row">
                        <div class="little_blue_card">
                            <%= offre.remuneration %>
                        </div>
                        <div class="little_blue_card">
                            <%= offre.rythme %>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button class="btn-secondary">Voir d√©tails / Candidater</button>
                </div>
            </div>
            <% }) %>
        </div>
        <div class="right-column"> 
            test
        </div>
    </div>
  


